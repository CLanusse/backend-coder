<style>
    .table td, .table th {
        vertical-align: middle;
    }
    h1 {
        color: blue;
    }
    hr {
        background-color: #ddd;
    }
    .jumbotron {
        min-height: 100vh;
    }
</style>

<div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br>

    <% if (hayProductos) { %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
                <% hayProductos.forEach((prod) => {%>
                    <tr>
                        <td>
                            <%=prod.title%>
                        </td>
                        <td>
                           $ <%=prod.price%>
                        </td>
                        <td>
                            <img width="50" src=<%=prod.thumbnail%> alt="not found">                           
                        </td>
                    </tr>
                    <%});%>
                    
                
            </table>
        </div>
    <% } else {%>
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    <% } %>

    <a href="/" class="btn btn-info m-3">Volver</a>
</div>